# Server Configuration
PORT=3000

# Authentication
VITE_JWT_SECRET=your_jwt_secret_key_here
VITE_JWT_EXPIRATION=1d

# Database Connection - for local development with PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/artisan_marketplace

# API URLs
VITE_API_URL=http://localhost:3000/api

# For Production
# VITE_API_URL=https://your-production-domain.com/api

# Optional: External Services
# VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
# VITE_CLOUDINARY_API_KEY=your_cloudinary_api_key
# VITE_CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Optional: Analytics
# VITE_GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Note: All environment variables accessed in React components must be prefixed with VITE_